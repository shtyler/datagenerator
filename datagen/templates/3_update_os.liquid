---------------------------------------------------------------------
CREATE TABLE IF NOT EXISTS generated_custom_values
(
	dataset VARCHAR,
	field VARCHAR,
	values VARCHAR
);

CREATE OR REPLACE VIEW wrk_generated_custom_values AS
	SELECT
		LOWER(dataset) as dataset,
		LOWER(REGEXP_REPLACE(REPLACE(field,' ',''),'(\d)','')) as field,
		values
	FROM csv_custom_values
;

